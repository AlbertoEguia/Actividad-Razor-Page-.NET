@page
@model ActividadRazorPage.Pages.CarpetaDeportes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <button class="btn btn-primary"> <a style="color:#000;"asp-page="Create"> Create New </a> </button>
</p>

<form>
    <p>
        Buscar: <input type="text" asp-for="SearchString" />
        <input class="btn btn-warning" type="submit" value="Buscar" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Deportes[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deportes[0].Coperativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deportes[0].Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deportes[0].Duracion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Deportes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coperativo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duracion)
                </td>
                <td>
                    <button class="btn btn-primary"> <a style="color:#000;" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> </button>
                    <button class="btn btn-primary"> <a style="color:#000;" asp-page="./Details" asp-route-id="@item.ID">Details</a> </button>
                    <button class="btn btn-danger"> <a style="color:#000;" asp-page="./Delete" asp-route-id="@item.ID">Delete</a> </button>
                </td>
            </tr>
}
    </tbody>
</table>
