@page
@model ActividadRazorPage.Pages.CarpetaDeportes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Deportes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Deportes.ID" />
            <div class="form-group">
                <label asp-for="Deportes.Nombre" class="control-label"></label>
                <input asp-for="Deportes.Nombre" class="form-control" />
                <span asp-validation-for="Deportes.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Deportes.Coperativo" /> @Html.DisplayNameFor(model => model.Deportes.Coperativo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Deportes.Tipo" class="control-label"></label>
                <input asp-for="Deportes.Tipo" class="form-control" />
                <span asp-validation-for="Deportes.Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deportes.Duracion" class="control-label"></label>
                <input asp-for="Deportes.Duracion" class="form-control" />
                <span asp-validation-for="Deportes.Duracion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button class="btn btn-primary"> <a style="color:#000;" asp-page="./Index">Back to List</a> </button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
